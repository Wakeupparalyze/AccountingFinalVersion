<Page x:Class="Accounting.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Accounting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" Content="Вход"/>
            <Label Content="Логин"/>
            <TextBox MinWidth="200" Text="{Binding Login}"/>
            <Label Content="Пароль"/>
            <TextBox Text="{Binding Password}"/>
            <Button Margin="0 5 0 0" Content="Войти" Click="SignIn"/>
            <Button Margin="0 5 0 0" Content="Зарегестрироваться" Click="ToRegistrationPage"/>
        </StackPanel>
    </Grid>
</Page>
